    <div style="padding:10px; align:'center'">
        <div class="form-group">
            <label for="usr">WorkSpaceID:</label>
            <input type="text" class="form-control" id='workspace'>
        </div>
        <div class="form-group">
            <label for="pwd">ReportID:</label>
            <input type="password" class="form-control" id='report'>
        </div>
        
        <button type="button" class="btn btn-primary" onclick="report()">Submit And View Report</button>
        <button type="button" class="btn btn-primary" onclick="api()">Submit And View Token</button>
    </div>

    <script>
        function report(){
            var r = document.getElementById("report").value;
            var d = document.getElementById("workspace").value;
            //console.log(r)
            var url = 'http://127.0.0.1:4000/report/'+r+'/'+d
            location.replace(url);
        }

        function api(){
            var r = document.getElementById("report").value;
            var d = document.getElementById("workspace").value;
            //console.log(r)
            var url = 'http://127.0.0.1:4000/api/'+r+'/'+d
            location.replace(url);
        }
    </script>
    
